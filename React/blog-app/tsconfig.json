{
  "compilerOptions": {
    "baseUrl": "src", // 절대경로 기본 디렉터리 지정
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx"
  },
  "include": [ "src"],
  "paths":{   // 모듈 이름, 해당 모듈 파일의 경로를 매핑하는 설정
    "pages/*" : ["pages/*"],
    "components/*" : ["components/*"]
  }  
}
